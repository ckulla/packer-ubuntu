{
  "variables": {
    "cm": "puppet",
    "cm_version": "latest",
    "cm_set_path": "",
    "cleanup_pause": "",
    "headless": "true",
    "auto_upgrade": "false",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04-server-amd64.iso",
    "iso_checksum": "4d94f6111b8fe47da94396180ce499d8c0bb44f3"
  },
  "builders": [{
    "vm_name": "ubuntu1404-minimal-amd64",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "guest_os_type": "Ubuntu_64",
    "guest_additions_url": "https://www.virtualbox.org/download/testcase/VBoxGuestAdditions_4.3.13-94438.iso",
    "guest_additions_sha256" : "4046f4dd2348031f41b0dff9277d313fa87397cca3ddb84612b17db20b20210a",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": "{{ user `headless` }}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz noapic ",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-ubuntu-minimal.cfg ",
      "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
      "hostname={{ .Name }} ",
      "fb=false debconf/frontend=noninteractive ",
      "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
      "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
      "initrd=/install/initrd.gz -- <enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "2048"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CM_SET_PATH={{user `cm_set_path`}}",
      "CLEANUP_PAUSE={{user `cleanup_pause`}}",
      "AUTO_UPGRADE={{user `auto_upgrade`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/vagrant.sh",
      "script/sshd.sh",
      "script/vmtool.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "box/{{.Provider}}/ubuntu1404-minimal-amd64.box"
  }]
}
